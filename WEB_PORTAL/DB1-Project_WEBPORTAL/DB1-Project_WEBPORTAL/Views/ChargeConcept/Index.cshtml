<hr />

<h3> Fijos </h3>
<hr />
<p>
    
    <a asp-action="CreatePercentage">
        <input type="submit" value="Insertar Usuario" class="btn btn-success"/>
    </a>
    
</p>


<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Tipo Usuario
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Name)
            </td>
            <td>
                @if (user.isAdmin)
                {
                    <p> Administrador</p>
                }
                else
                {
                    <p> Propietario </p>
                }
                
            </td>
            <td>
                <a asp-action="Delete" asp-route-pUsername="@user.Name">
                    <input type="submit" value="Borrar" class="btn btn-danger"/>
                </a>
            </td>
            <td>
                <a asp-action="EditPercentage" asp-route->
                    <input type="submit" value="Ver" class="btn btn-warning"/>
                </a>
            </td>
            <td>
                <a asp-action="DetailsPercentage" asp-route->
                    <input type="submit" value="Ver" class="btn btn-warning"/>
                </a>
            </td>  
            
        </tr>
    }
    </tbody>
</table>
