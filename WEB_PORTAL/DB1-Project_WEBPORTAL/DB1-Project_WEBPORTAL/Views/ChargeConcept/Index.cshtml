
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    List<ConsumptionCcModel> consumptionCCs = ViewData["ConsumptionCCs"] as List<ConsumptionCcModel>;
    List<PercentageCcModel> percentageCCs = ViewData["PercentageCCs"] as List<PercentageCcModel>;
    List<MoratoryInterestCcModel> moratoryIntsCCs = ViewData["MoratoryIntsCCs"] as List<MoratoryInterestCcModel>;
    List<FixedCcModel> fixedCCs = ViewData["FixedCCs"] as List<FixedCcModel>;
}

<h1> Conceptos de Cobro </h1>
<hr />
<h3> Fijos </h3>
<hr />
<p>
    
    <a asp-action="CreateFixed">
        <input type="submit" value="Insertar Usuario" class="btn btn-success"/>
    </a>
    
</p>


<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => fixedCCs[0].ChargeConceptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => fixedCCs[0].ExpirationDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => fixedCCs[0].ReciptEmisionDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => fixedCCs[0].MoratoryInterestRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => fixedCCs[0].Amount)
        </th>
        
    </tr>
    </thead>
    <tbody>
          @foreach(var fixedCC in fixedCCs)
          {
              <tr>
                  <td>
                      @Html.DisplayFor(modelItem => fixedCC.ChargeConceptName)
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => fixedCC.ExpirationDays)
                  </td>
                  <th>
                      @Html.DisplayFor(model => fixedCC.ReciptEmisionDay)
                  </th>                  
                  <td>
                      @Html.DisplayFor(modelItem => fixedCC.MoratoryInterestRate)
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => fixedCC.Amount)
                  </td>
                 <td>
                     <a asp-action="Delete" asp-route->
                        <input type="submit" value="Borrar" class="btn btn-danger"/>
                     </a>
                 </td>
                 <td>
                     <a asp-action="EditFixed" asp-route->
                        <input type="submit" value="Ver" class="btn btn-warning"/>
                     </a>
                 </td>
                 <td>
                    <a asp-action="DetailsFixed" asp-route->
                       <input type="submit" value="Ver" class="btn btn-warning"/>
                    </a>
                 </td>                  
              </tr>
          }
    </tbody>
</table>


<hr />
