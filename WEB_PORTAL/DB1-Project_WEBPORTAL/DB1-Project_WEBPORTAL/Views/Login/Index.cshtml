@{
    ViewData["Title"] = "Login Page"; 
    Layout = "~/Views/Shared/_NonHeaderLayout.cshtml";
}

<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="module module-login offset-4">
                <form class="form-vertical" action="@Url.Action("Index")" method="post">
                    <div class="module-head">
                        <h3>Sign In</h3>
                    </div>
                    <div class="module-body">
                        <div class="control-group">
                            <div class="controls row-fluid">
                                <input class="span12" type="text" name="pUsername" placeholder="Username">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls row-fluid">
                                <input class="span12" type="password" name="pPassword" placeholder="Password">
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right" value="Login" name="loginBtn">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


