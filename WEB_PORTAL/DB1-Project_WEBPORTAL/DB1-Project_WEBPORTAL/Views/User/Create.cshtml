@model DB1_Project_WEBPORTAL.Models.UserModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string isAdmin = "1";
}

<h1>Usuarios</h1>
<h4>Insertar Usuario</h4>
<div>
    <a href='javascript:history.go(-1)'>Volver</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input  asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input  type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isAdmin" class="control-label"></label>
                @Html.CheckBoxFor(model => model.isAdmin)
            </div>
            <div class="form-group">
                <input type="submit" value="Insertar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}