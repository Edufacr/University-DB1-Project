@model IEnumerable<DB1_Project_WEBPORTAL.Models.OwnerModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1> Propietarios </h1>

<p>
    <a asp-action="Create">
        <input type="submit" value="Insertar Propietario" class="btn btn-success"/>
    </a>
    <a asp-action="CreateLegal">
         <input type="submit" value="Insertar Propietario Jurídico" class="btn btn-success"/>
    </a>
</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocType)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var owner in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => owner.DocValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => owner.DocType)
            </td>
            <td>
                @{
                    if (owner.DocType == "Cedula Juridica")
                    {
                        <a asp-action="EditLegal" asp-route-pDocValue="@owner.DocValue">
                            <input type="submit" value="Editar" class="btn btn-success"/>
                        </a>
                    }
                    else
                    {
                        <a asp-action="Edit" asp-route-pDocValue="@owner.DocValue" asp-route-pDocType="@owner.DocType">
                            <input type="submit" value="Editar" class="btn btn-success"/>
                        </a>
                    }
                }
            </td>
            <td>
                <a asp-action="Delete" asp-route-pDocValue="@owner.DocValue" asp-route-pDocType="@owner.DocType">
                    <input type="submit" value="Borrar" class="btn btn-danger"/>
                </a>
            </td>
            <td>
                @{
                    
                    if (owner.DocType == "Cedula Juridica")
                    {
                        <a asp-action="DetailsLegal" asp-route-pDocValue="@owner.DocValue" asp-route-pUserType="1">
                            <input type="submit" value="Ver" class="btn btn-warning"/>
                        </a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-pDocValue="@owner.DocValue" asp-route-pDocType="@owner.DocType" asp-route-pUserType="1">
                            <input type="submit" value="Ver" class="btn btn-warning"/>
                        </a>
                    }
                }
            </td>
        </tr>
    }
    </tbody>
</table>
